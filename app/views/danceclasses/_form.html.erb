

  <div class="row">
                <div class="col-md-6 offset-md-3">
                    <span class="anchor" id="formLogin"></span>

                    <!-- form card login with validation feedback -->
                    <div class="card card-outline-secondary">
                        <div class="card-header">
                            <h3 class="mb-0">Classes</h3>
                            <div class="align-right">
                              <%= link_to 'Show', @danceclass %> |
                              <%= link_to 'Back', danceclasses_path %>
                            </div>
                        </div>
                        <div class="card-body">
                            <%= form_with(model: danceclass, local: true) do |form| %>
                            <% if danceclass.errors.any? %>
                              <div id="error_explanation">
                                <h2><%= pluralize(danceclass.errors.count, "error") %> prohibited this danceclass from being saved:</h2>
                          
                                <ul>
                                <% danceclass.errors.full_messages.each do |message| %>
                                  <li><%= message %></li>
                                <% end %>
                                </ul>
                              </div>
                            <% end %>
                                <div class="form-group">
                                   <%= form.label :title %>
                                    <%= form.text_field :title, class: 'form-control', id: :danceclass_title %>
                                </div>
                                <div class="form-group">
                                   <%= form.label :description %>
                                    <%= form.text_area :description,class: 'form-control', id: :danceclass_description %>
                                </div>
                                <div class="form-group">
                                    <%= form.label :price %>
                                    <%= form.text_field :price, class: 'form-control', id: :danceclass_price %>
                                </div>
                                <div class="form-group">
                                       <%= form.label :image_url %>
                                        <%= form.text_field :image_url, class: 'form-control', id: :danceclass_image_url %>
                                </div>
                                <div class="form-group">
                                    <%= form.label :category %>
                                    <%= form.text_field :category, class: 'form-control', id: :danceclass_category %>
                                </div>
                           
                                <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Submit</button>
                            </form>
                        </div>
                        <!--/card-body-->
                    </div>
                    <!-- /form card login -->

                </div>
<% end %>
